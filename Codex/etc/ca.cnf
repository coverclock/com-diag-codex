[ req ]
prompt                 = no
output_password        = s3rv3rC8
default_bits           = 3072
default_md             = sha256
distinguished_name     = req_distinguished_name

[ req_distinguished_name ]
C                      = US
ST                     = Colorado
L                      = Boulder
O                      = Prairie Thorn
OU                     = CA
CN                     = ca.prairiethorn.org
emailAddress           = ca@prairiethorn.org

[ v3_ca ]
subjectKeyIdentifier   = hash
authorityKeyIdentifier = keyid:always,issuer
basicConstraints       = CA:true
